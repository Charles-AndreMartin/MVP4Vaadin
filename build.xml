	</target>
	
	<target name="build-demo-war" depends="compile-demo">
		<war basedir="${demo.war.dir}" compress="true" encoding="utf-8" destfile="${demo.war}"/>
	</target>-->
	
	<target name="all" depends="clean,build-addon-jar">
	</target>

</project>
